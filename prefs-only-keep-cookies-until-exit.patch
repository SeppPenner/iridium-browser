+  {prefs::kDefaultCookiesSetting, CONTENT_SETTING_SESSION_ONLY},
   {prefs::kDefaultImagesSetting, CONTENT_SETTING_ALLOW},
   {prefs::kDefaultJavaScriptSetting, CONTENT_SETTING_ALLOW},
