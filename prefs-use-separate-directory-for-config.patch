Subject: [PATCH 26/60] prefs: use separate directory for config

Do not overwrite an existing Chromium configuration.
---
 chrome/common/chrome_paths_linux.cc | 6 +-----
 1 file changed, 1 insertion(+), 5 deletions(-)

diff --git a/chrome/common/chrome_paths_linux.cc b/chrome/common/chrome_paths_linux.cc
index aa26cc9bbb90..2aa2899a32ba 100644
--- a/chrome/common/chrome_paths_linux.cc
+++ b/chrome/common/chrome_paths_linux.cc
@@ -66,11 +66,7 @@ bool GetDefaultUserDataDirectory(base::FilePath* result) {
   base::FilePath config_dir(GetXDGDirectory(env.get(),
                                             kXdgConfigHomeEnvVar,
                                             kDotConfigDir));
-#if defined(GOOGLE_CHROME_BUILD)
-  *result = config_dir.Append("google-chrome");
-#else
-  *result = config_dir.Append("chromium");
-#endif
+  *result = config_dir.Append("iridium");
   return true;
 }
 
