source_set("internal") {
  sources = [
    "image_decoder.cc",
    "image_decoder.h",
    "image_loader.cc",
    "image_loader.h",
    "proto_conversion.cc",
    "proto_conversion.h",
    "query_tile_store.cc",
    "query_tile_store.h",
